{
  "name": "@vanillawc/wc-code",
  "version": "0.2.1",
  "description": "run code in the browser for multiple programming languages !",
  "keywords": [
    "code",
    "browser",
    "run code in browser",
    "magic"
  ],
  "license": "MIT",
  "author": "Aditya Shankar me@adityashankar.xyz https://adityashankar.xyz",
  "main": "index.js",
  "repository": "https://github.com/vanillawc/wc-code/",
  "scripts": {
    "start": "npx live-server --no-browser --port=5500 --open=dev",
    "lint": "esmtk lint",
    "build": "npm run build:main && npm run build:min && npm run build:lang-js",
    "build:main": "npx rollup --config .config/main.config.js",
    "build:min": "npx rollup --config .config/min.config.js",
    "build:lang-js": "npx rollup --config .config/languages/javascript.js.config.js",
    "package": "npx rimraf package && npm pack | tail -n 1 | xargs tar -xf",
    "preversion": "npm run lint",
    "postversion": "git push --follow-tags"
  },
  "devDependencies": {
    "esmtk": "^0.1.1",
    "rollup-plugin-copy": "^3.3.0",
    "rollup-plugin-terser": "^5.2.0"
  },
  "standard": {
    "ignore": [
      "index.js"
    ]
  },
  "dependencies": {
    "@vanillawc/wc-codemirror": "^1.8.7",
    "acorn": "^7.3.1",
    "acorn-walk": "^7.2.0"
  }
}
